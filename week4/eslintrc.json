{
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-unused-vars": "error",          // Require variables to be used
      "no-undef": "error",                // Require variables to be declared
      "camelcase": "error"                // Enforce camelCase for variable names
    }
  }
  